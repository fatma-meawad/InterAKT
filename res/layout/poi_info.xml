<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poi_info_holder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="#7000"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:src="@drawable/poi_icn" />

            <TextView
                android:id="@+id/poi_info_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="#f90"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/poi_info_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:textColor="#999" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/poi_info_thumbnail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="0"
                    android:background="@drawable/description_box"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/usr_icn" />

                        <TextView
                            android:id="@+id/poi_info_creator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#f90" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/category_icn" />

                        <TextView
                            android:id="@+id/poi_info_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#f90" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/tab_anchor_rotated" />

                        <TextView
                            android:id="@+id/poi_info_source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#f90" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/poi_info_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="#f90" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/poi_info_fipper_description"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_square"
                            android:padding="3dp"
                            android:text="Description"
                            android:textColor="#f90"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="18px"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:scaleType="fitXY"
                            android:src="@drawable/anchor" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/vertical_seperator" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/poi_info_fipper_children"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_square"
                            android:padding="3dp"
                            android:text="Children"
                            android:textColor="#f90"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="18px"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:scaleType="fitXY"
                            android:src="@drawable/anchor"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/vertical_seperator" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/poi_info_fipper_comments"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_square"
                            android:padding="3dp"
                            android:text="Comments"
                            android:textColor="#f90"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="18px"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:scaleType="fitXY"
                            android:src="@drawable/anchor"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/poi_info_fipper_map"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_square"
                            android:padding="3dp"
                            android:text="Map"
                            android:textColor="#f90"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="41px"
                            android:layout_height="18px"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:scaleType="fitXY"
                            android:src="@drawable/anchor"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <ViewFlipper
                        android:id="@+id/poi_info_flipper"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/description_box" >

                        <include
                            android:id="@+id/firstlayout"
                            layout="@layout/poi_info_fliper_description" />
                    </ViewFlipper>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>